<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sjsu.priteshchandaliya.cmpeginie.FutureStudent"
    tools:showIn="@layout/app_bar_future_student">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Specialization"
        android:id="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />



    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Networking"
        android:id="@+id/networking"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Embedded"
        android:id="@+id/embedded"
        android:layout_below="@+id/networking"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pre Requisites"
        android:id="@+id/textView4"
        android:layout_below="@+id/embedded"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CMPE 190-90"
        android:id="@+id/prereq1"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
 />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CMPE 180-92"
        android:id="@+id/prereq2"
        android:layout_below="@+id/prereq1"
        android:layout_alignParentStart="true"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CMPE 180-94"
        android:id="@+id/prereq3"
        android:layout_below="@+id/prereq2"
        android:layout_alignParentStart="true"
        android:nestedScrollingEnabled="false"
        />

    TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView2"
        android:layout_toStartOf="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of courses in a semester"
        android:id="@+id/textView6"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/prereq3"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*It is recommended to take 3 courses in a semester"
        android:id="@+id/textView7"
        android:textStyle="italic"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/no3"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/no4"
        android:layout_below="@+id/no3"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proceed"
        android:background="#FF8000"
        android:breakStrategy="high_quality"
        android:id="@+id/button"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:onClick="planNetwork"
        android:layout_below="@+id/no4"
        android:layout_centerInParent="true"
         />

</RelativeLayout>
