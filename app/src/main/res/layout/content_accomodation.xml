<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sjsu.priteshchandaliya.cmpeginie.Accomodation"
    tools:showIn="@layout/app_bar_accomodation">

    <Button
        android:background="#FF8000"
    android:breakStrategy="high_quality"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="On Campus Housing"
        android:id="@+id/button1"
        android:contextClickable="true"
        android:clickable="true"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="20dp"
        android:onClick="onCampus"
        android:paddingTop="2dp"
        android:layout_above="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Off Campus Housing"
        android:id="@+id/button2"
        android:contextClickable="true"
        android:clickable="true"
        android:textColor="#ffffff"
        android:background="#FF8000"
        android:textAllCaps="false"
        android:layout_marginTop="3dp"
        android:breakStrategy="high_quality"
        android:textSize="20dp"
        android:textStyle="bold"
        android:onClick="offCampus"
        android:layout_above="@+id/button3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FAQs"
        android:paddingTop="2dp"
        android:background="#FF8000"
        android:breakStrategy="high_quality"
        android:id="@+id/button3"
        android:textAllCaps="false"
        android:paddingStart="10dp"
        android:textColor="#ffffff"
        android:layout_marginTop="3dp"
        android:paddingEnd="10dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:onClick="faq"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="University Housing Services "
        android:textColor="#0000ff"
        android:id="@+id/text1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text2"
        android:fontFeatureSettings="10dp"
        android:layout_below="@+id/text1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="17dp"
        android:layout_alignRight="@+id/button1"
        android:layout_alignEnd="@+id/button1" />
    </RelativeLayout>

